<%- model_class = BillAccount -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:account_no) %></th>
      <th><%= model_class.human_attribute_name(:name_on_the_bill) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:provider) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bill_accounts.each do |bill_account| %>
      <tr>
        <td><%= link_to bill_account.id, bill_account_path(bill_account) %></td>
        <td><%= bill_account.name %></td>
        <td><%= bill_account.account_no %></td>
        <td><%= bill_account.name_on_the_bill %></td>
        <td><%= bill_account.description %></td>
        <td><%= bill_account.user_id %></td>
        <td><%= bill_account.provider %></td>
        <td><%=l bill_account.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bill_account_path(bill_account), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bill_account_path(bill_account),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bill_account_path,
            :class => 'btn btn-primary' %>
