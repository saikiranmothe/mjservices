<%- model_class = BillService -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:bill_description) %></th>
      <th><%= model_class.human_attribute_name(:bill_no) %></th>
      <th><%= model_class.human_attribute_name(:name_on_bill) %></th>
      <th><%= model_class.human_attribute_name(:bill_address) %></th>
      <th><%= model_class.human_attribute_name(:account_no) %></th>
      <th><%= model_class.human_attribute_name(:bill_amount) %></th>
      <th><%= model_class.human_attribute_name(:bill_due_date) %></th>
      <th><%= model_class.human_attribute_name(:where_to_pay) %></th>
      <th><%= model_class.human_attribute_name(:bill_account_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @bill_services.each do |bill_service| %>
      <tr>
        <td><%= link_to bill_service.id, bill_service_path(bill_service) %></td>
        <td><%= bill_service.category %></td>
        <td><%= bill_service.bill_description %></td>
        <td><%= bill_service.bill_no %></td>
        <td><%= bill_service.name_on_bill %></td>
        <td><%= bill_service.bill_address %></td>
        <td><%= bill_service.account_no %></td>
        <td><%= bill_service.bill_amount %></td>
        <td><%= bill_service.bill_due_date %></td>
        <td><%= bill_service.where_to_pay %></td>
        <td><%= bill_service.bill_account_id %></td>
        <td><%=l bill_service.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_bill_service_path(bill_service), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      bill_service_path(bill_service),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_bill_service_path,
            :class => 'btn btn-primary' %>
