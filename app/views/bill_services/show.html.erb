<%- model_class = BillService -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:category) %>:</strong></dt>
  <dd><%= @bill_service.category %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_description) %>:</strong></dt>
  <dd><%= @bill_service.bill_description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_no) %>:</strong></dt>
  <dd><%= @bill_service.bill_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name_on_bill) %>:</strong></dt>
  <dd><%= @bill_service.name_on_bill %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_address) %>:</strong></dt>
  <dd><%= @bill_service.bill_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:account_no) %>:</strong></dt>
  <dd><%= @bill_service.account_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_amount) %>:</strong></dt>
  <dd><%= @bill_service.bill_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_due_date) %>:</strong></dt>
  <dd><%= @bill_service.bill_due_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:where_to_pay) %>:</strong></dt>
  <dd><%= @bill_service.where_to_pay %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_account_id) %>:</strong></dt>
  <dd><%= @bill_service.bill_account_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bill_services_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bill_service_path(@bill_service), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bill_service_path(@bill_service),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
