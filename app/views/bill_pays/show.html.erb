<%- model_class = BillPay -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @bill_pay.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_no) %>:</strong></dt>
  <dd><%= @bill_pay.bill_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_amount) %>:</strong></dt>
  <dd><%= @bill_pay.bill_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_due_date) %>:</strong></dt>
  <dd><%= @bill_pay.bill_due_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_id) %>:</strong></dt>
  <dd><%= @bill_pay.bill_id %></dd>
  <hr>
   <%= image_tag @bill_pay.photo.url(:small) %>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bill_pays_path, :class => 'btn'  %>

</div>
